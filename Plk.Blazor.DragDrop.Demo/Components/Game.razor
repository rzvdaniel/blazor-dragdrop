@using Plk.Blazor.DragDrop.Demo.Data 

<div style="border: 2px solid @BorderColor;">
    <button  @onclick="@(()=> OnRemoveClick.InvokeAsync(Item))" class="btn btn-secondary m-1">
        <span class="oi oi-trash"></span>
    </button>
    <span class="ml-3 oi oi-sun"></span>
    @Item.Text

</div>

@code {

    [Parameter]
    public GameElement Item { get; set; }

    [Parameter]
    public EventCallback<GameElement> OnRemoveClick { get; set; }

    public string BorderColor { get {
            return "black";
        } }
}
